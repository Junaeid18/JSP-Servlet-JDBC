<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>UserApp</display-name>
  <welcome-file-list>
    <welcome-file>addUser.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

	<servlet>
		<servlet-name>readUserServlets</servlet-name>
		<servlet-class>com.junaeid.users.servlets.readUserServlets</servlet-class>
		<init-param>
			<param-name>dbUrl</param-name>
			<param-value>jdbc:sqlserver://localhost:1433;</param-value>			
		</init-param>
		
		<init-param>
			<param-name>dbName</param-name>
			<param-value>databaseName=mydb;</param-value>		
		</init-param>
		
		<init-param>
			<param-name>dbUser</param-name>
			<param-value>user=junaeid;</param-value>		
		</init-param>	
			
		<init-param>
			<param-name>dbPassword</param-name>
			<param-value>password=1234</param-value>		
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>readUserServlets</servlet-name>
		<url-pattern>/readServlet</url-pattern>
	</servlet-mapping>


</web-app>